{

  "flex-layout.row#top-bar": {
    "title": "Informações Topo",
    "props": {
      "blockClass": "wrapper-topbar"
    },
    "children": [
      "flex-layout.col#frete-box",
      "flex-layout.col#parcelamento",
      "flex-layout.col#rastreio"
    ]
  },
  "flex-layout.col#frete-box": {
    "children": ["rich-text#text-frete-gratis"]
  },
  "flex-layout.col#parcelamento": {
    "children": ["rich-text#text-parcelamento"]
  },
  "flex-layout.col#rastreio": {
    "children": ["rich-text#text-rastreio"]
  },

  "rich-text#text-frete-gratis": {
    "props": {
      "blockClass": "text-topbar",
      "text": "**Frete grátis** acima de R$499*"
    }
  },

  "rich-text#text-parcelamento": {
    "props": {
      "blockClass": "text-topbar",
      "text": "Parcelamento em até **10x sem juros**"
    }
  },



  "rich-text#text-rastreio": {
    "props": {
      "blockClass": ["text-topbar","link-rastreio"],
      "text": "[Rastreie seu pedido](/rastreio)"
    }
  }

}
